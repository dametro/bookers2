<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<%#  追記！  , var: @var  %>
<%= render 'users/user_info'%>

<%= render 'books/new_book', book: @new_book%>

<h2>Books detail</h2>
<p>本の詳細</p>
<table>
  <tbody>
    <tr>
      <td>
        <%# リンクは(book.user.id)にしなくていい %>
        <%= link_to user_path(@book.user) do %>
          <%# userモデルで作ったメソッド get_image %>
          <%= image_tag @book.user.get_image, size: "200x200"%>
          <br>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book), method: :get %></td>
      <td><%= @book.body %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= flash[:notice] %>
</div>
<div class="col-md-3">
  <%= render 'users/user_info', user: @your_user %>

  <%= render 'books/new_book', book: @new_book %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Books detail</h2>
  <p>本の詳細</p>
  <table>
    <tbody>
      <tr>
        <td>
          <%# リンクは(book.user.id)にしなくていい %>
          <%= link_to user_path(@book.user) do %>
            <%# userモデルで作ったメソッド get_image %>
            <%= image_tag @book.user.get_image, size: "100x100"%>
            <br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book), method: :get %></td>
        <td><%= @book.body %></td>
        <% if @book.user.id == current_user.id %>
          <td><%= button_to "Edit", edit_book_path(@book.id), method: :get %></td>
          <td><%= button_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
          <%# confirm 要るか？？ %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
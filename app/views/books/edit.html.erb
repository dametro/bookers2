<div class="col">

  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>

    <div class="form-group">
      <span>title</span><br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <span>Opinion</span><br>
      <%= f.text_area :body %><br>
    </div>
    <div class="form-group">
      <%= f.submit 'Update Book', class: "btn btn-success" %>
    </div>
  <% end %>

  <%= link_to "Show", book_path(@book), method: :get %>
  &nbsp;
  <%= link_to "Back", "/books" %>
</div>
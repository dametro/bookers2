<div>
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <div class="form-group">
      <span>Title</span><%= f.text_field :title %><br>
    </div>

    <div class="form-group">
      <span>Opinion</span><%= f.text_field :body %><br>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Book' , class: "btn btn-success"%>
    </div>
  <% end %>

</div>
<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image, size: "100x100"%>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div>
    <%= link_to edit_user_path(user), class: "btn btn-block btn-secondary" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>
</div>
<br>
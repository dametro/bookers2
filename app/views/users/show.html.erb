<div class="col-md-3">
  <%= render 'users/user_info', user: @user %>
  <%# あなたのみではなく、任意の注目ユーザー %>

  <%= render 'books/new_book', book: @new_book %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Books(このユーザーの投稿)</h2>
  <%# コードはbooks/indexと全く同じ %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
        <%# 今回は要るか？？？ %>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%# リンクは(book.user.id)にしなくていい %>
            <%= link_to user_path(book.user) do %>
              <%# userモデルで作ったメソッド get_image %>
              <%= image_tag book.user.get_image, size: "100x100"%>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book), method: :get %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

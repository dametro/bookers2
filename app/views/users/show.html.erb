<div class="row">
  <div class="col-md-3">
    <%= render 'users/user_info', user: @user %>
    <%# あなたのみではなく、任意の注目ユーザー %>

    <%= render 'books/new_book', book: @new_book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Books(このユーザーの投稿)</h2>
    <%# コードはbooks/indexと全く同じ %>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%# リンクは(book.user.id)にしなくていい %>
              <%= link_to user_path(book.user) do %>
                <%# userモデルで作ったメソッド get_profile_image %>
                <%= image_tag book.user.get_profile_image, size: "100x100"%>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book), method: :get %></td>
            <td><%= book.body %></td>

            <td>

              <% if book.favorited_by?(current_user) %>
                <%= link_to book_favorite_path(book), method: :delete do %>
                  (ハートアイコン): <%= book.favorites.count %> あなたはいいね済 取り消す？
                <% end %>
              <% else %>
                <%= link_to book_favorite_path(book), method: :post do %>
                  (ハートアイコン): <%= book.favorites.count %> あなたは未いいね 加える？
                <% end %>
              <% end %>

            </td>

            <td>
              <span>コメント数: <%= book.book_comments.count %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

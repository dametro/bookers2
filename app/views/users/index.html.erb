<div class="col-md-3">
  <%= render 'users/user_info', user: @your_user %>

  <%= render 'books/new_book', book: @new_book %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th colspan="3"></th>
        <%# 今回は要るか？？？ %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%# userモデルで作ったメソッド get_image %>
            <%= image_tag user.get_image, size: "100x100"%>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>